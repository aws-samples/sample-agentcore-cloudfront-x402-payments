# AWS Configuration
AWS_REGION=us-west-2

# AgentCore Runtime Configuration
# Get this ARN after deploying the agent to AgentCore Runtime:
#   cd payer-infrastructure && cdk deploy
#   # Look for output: AgentRuntimeArn = arn:aws:bedrock:us-west-2:123456789012:agent-runtime/...
AGENT_RUNTIME_ARN=arn:aws:bedrock:us-west-2:123456789012:agent-runtime/your-runtime-id

# Bedrock Model ID (for local development without AgentCore Runtime)
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-20250514-v1:0

# Coinbase Developer Platform (CDP) Configuration
# Get these from https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_cdp_api_key_id
CDP_API_KEY_SECRET=your_cdp_api_key_secret
CDP_WALLET_SECRET=your_cdp_wallet_secret

# Network Configuration
# Supported testnet networks for faucet: base-sepolia, ethereum-sepolia
NETWORK_ID=base-sepolia

# Seller API (CloudFront distribution URL after deployment)
# Get this URL after deploying seller-infrastructure:
#   cd seller-infrastructure && cdk deploy
#   # Look for output: X402DistributionUrl = https://dXXXXXXXXXXXXX.cloudfront.net
#
# Or query CloudFormation:
#   aws cloudformation describe-stacks --stack-name X402SellerStack \
#     --query "Stacks[0].Outputs[?ExportName=='X402DistributionUrl'].OutputValue" \
#     --output text
#
SELLER_API_URL=https://your-cloudfront-distribution.cloudfront.net

# API Server Configuration (for web UI backend)
API_PORT=8080

# OpenTelemetry Configuration
# OTLP endpoint for trace export (e.g., AWS X-Ray OTLP endpoint or local collector)
# Leave empty to disable OTLP export
OTEL_EXPORTER_OTLP_ENDPOINT=

# Set to "true" to also export traces to console (useful for debugging)
OTEL_CONSOLE_EXPORT=false

# Environment name for trace metadata
ENVIRONMENT=development
