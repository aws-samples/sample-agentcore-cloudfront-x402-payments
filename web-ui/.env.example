# Gateway API Configuration
# Copy this file to .env.local and fill in your values

# Gateway endpoint URL (backend proxy or direct endpoint)
VITE_GATEWAY_ENDPOINT=http://localhost:8080/api

# AWS Region
VITE_AWS_REGION=us-west-2

# AgentCore Agent ID
VITE_AGENT_ID=your-agent-id

# Agent Alias ID (default: TSTALIASID for test alias)
VITE_AGENT_ALIAS_ID=TSTALIASID

# =============================================================================
# Authentication Configuration
# =============================================================================

# Authentication method: 'cognito', 'proxy', 'api-key', or 'none'
# - cognito: Uses AWS Cognito Identity Pool for temporary credentials (recommended for production)
# - proxy: Uses a backend proxy that handles SigV4 signing (recommended for development)
# - api-key: Uses API Gateway API key authentication
# - none: No authentication (for testing only)
VITE_AUTH_METHOD=proxy

# Cognito Configuration (required if VITE_AUTH_METHOD=cognito)
# Get these values from your AWS Cognito console
VITE_COGNITO_IDENTITY_POOL_ID=us-west-2:xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
VITE_COGNITO_USER_POOL_ID=us-west-2_xxxxxxxxx
VITE_COGNITO_USER_POOL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx

# API Key (required if VITE_AUTH_METHOD=api-key)
VITE_API_KEY=your-api-key

# Proxy Endpoint (optional, for proxy mode)
# If not set, uses VITE_GATEWAY_ENDPOINT
VITE_PROXY_ENDPOINT=
